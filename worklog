#!/bin/zsh
LOG_FILE="${HOME}/.worklog.csv"
CURRENT_SESSION="${HOME}/.worklog_current"

# Initialize the log file if it doesn't exist already
if [[ ! -f "$LOG_FILE" ]]; then
    echo "Date,Start,End,Duration,Task" > "$LOG_FILE"
fi

